{
    /******************************************************************************
    *
    * VScode
    * 
    *******************************************************************************/
    "debug.onTaskErrors": "showErrors",
    "editor.matchBrackets": "always",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.suggestSelection": "first",
    // font settings
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "editor.fontFamily": "'JetBrains Mono', 'Ubuntu Mono', monospace",
    "editor.fontLigatures": true,
    // indent 
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.renderIndentGuides": true,
    // auto save 
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.exclude": {
        "**/*.out": false,
        "**/*.o": true,
        "**/*.exe": true,
        "**/*.rar": true,
        "**/*.zip": true,
        "**/*.pdf": true,
        "**/*.doc": true,
        "**/*.ppt": true,
        "**/*.xlxs": true,
        "**/*.gitignore": false,
        "**/*.gitattributes": true,
    },
    // terminal setting
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    // vscode update 
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    //
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    // icon/color scheme
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Monokai High Contrast",
    "workbench.colorCustomizations": {
        "activityBar.background": "#6f727496",
        "activityBar.foreground": "#ffffff",
        "activityBarBadge.background": "#bb65c7",
        /* 右邊樹狀 list 的顏色 */
        "list.activeSelectionForeground": "#00ff6a",
        "list.activeSelectionBackground": "#0bfff370",
        "list.inactiveSelectionForeground": "#00ff6a",
        "list.inactiveSelectionBackground": "#0bfff370",
        "list.highlightForeground": "#b68fbb",
        "tree.indentGuidesStroke": "#fcff61",
        // "sideBar.background": "#4f5253a8",
        "sideBar.border": "#e838ff",
        /* menu 相關顏色 */
        "menubar.selectionForeground": "#dddddd",
        "menubar.selectionBackground": "#217e45",
        "menu.selectionForeground": "#dddddd",
        "menu.selectionBackground": "#217e45", // menu 下拉選單的碰到的的背景色
        "scrollbarSlider.activeBackground": "#00ff2a", // 點下去的顏色 
        "scrollbarSlider.hoverBackground": "#00ff2a6b", // 碰到的顏色 
        "scrollbarSlider.background": "#5ff17725", // 沒碰的顏色
        "tab.border": "#ffffff15", // tab 的分隔線
        "tab.activeBackground": "#62626267",
        "tab.activeForeground": "#ff9f32",
        "tab.activeBorder": "#00ff6a", // 當前 tab 的底線色 
        "tab.inactiveForeground": "#ff9f32",
        "tab.inactiveBackground": "#423f3f32",
        "tab.unfocusedActiveForeground": "#ff9f32", // 非當前分割畫面的選中 tab 字色
        "tab.unfocusedActiveBorder": "#00ff6a",
        "tab.unfocusedInactiveForeground": "#ff9f32",
        "tab.unfocusedActiveBackground": "#423f3f32",
        /* terminal 等 panel 的相關顏色 */
        // "terminal.background": "#3b3d3d",
        "terminal.foreground": "#07c300",
        "panel.border": "#ec5fff",
        "panelTitle.activeBorder": "#00ff6a",
        "panelTitle.activeForeground": "#00ff6ade",
        "panelTitle.inactiveForeground": "#b68fbb",
        // https://www.google.com
        "textLink.foreground": "#00ccff", // 連結的提示框的字色
        /* auto complete widget 相關顏色 */
        // "editor.background": "#222230",
        "editorSuggestWidget.foreground": "#b68fbb",
        "editorSuggestWidget.selectedBackground": "#ff880057",
        /* editor widget (ex.搜尋框) 的相關設定 */
        "editorWidget.resizeBorder": "#ff9f32",
        "editorWidget.border": "#b68fbb",
        /* editor 的搜尋相關顏色 */
        "editor.wordHighlightStrongBackground": "#ce92ff48",
        "editor.wordHighlightBackground": "#ff7b0038",
        "editor.findMatchBorder": "#00ff0000",
        "editor.findMatchBackground": "#ff00009d",
        "editor.findMatchHighlightBackground": "#ff7b002a", // 其他符合的 high light 
        "editorLineNumber.foreground": "#56e5f8",
        "editorLineNumber.activeForeground": "#ff008c",
        /* editor section 反白 */
        "editor.selectionBackground": "#b7d6ba8d",
        "editor.selectionHighlightBackground": "#0000004f",
        /* current line background */
        "editor.lineHighlightBackground": "#a6d2df1e",
        "selection.background": "#00a2ff", // UI, widget 反白顏色
        "progressBar.background": "#b68fbb",
        "pickerGroup.foreground": "#b68fbb",
        "notificationLink.foreground": "#b68fbb",
        // "statusBar.background": "#4391c5",
        "settings.modifiedItemIndicator": "#b68fbb",
        "settings.headerForeground": "#b68fbb",
        "breadcrumb.activeSelectionForeground": "#b68fbb",
        // indent color setting
        "editorIndentGuide.activeBackground": "#ff0000",
        "editorIndentGuide.background": "#c5a8ca",
    },
    //
    // 
    // 
    // 
    // 
    /******************************************************************************
     *
     * Git
     * 
    *******************************************************************************/
    "git.autofetchPeriod": 500,
    // 
    // 
    // 
    //
    // 
    /******************************************************************************
    *
    * Extensions' Setting
    * 
    *******************************************************************************/
    "extensions.autoUpdate": false,
    // * Spell Check
    "cSpell.spellCheckDelayMs": 500,
    // * bracket 
    "bracketPairColorizer.forceUniqueOpeningColor": true,
    "bracketPairColorizer.highlightActiveScope": true,
    "bracketPairColorizer.rulerPosition": "Center",
    "bracketPairColorizer.excludedLanguages": [],
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "bracketPairColorizer.timeOut": 100,
    "bracketPairColorizer.activeScopeCSS": [
        "borderStyle : solid",
        "borderWidth : 0px",
        "borderColor : white; opacity: 0.2",
        "backgroundColor: white",
    ],
    "bracketPairColorizer.scopeLineCSS": [
        "borderStyle : solid",
        "borderWidth : 0px",
        "borderColor : white; opacity: 0.7",
    ],
    // * TODO TREE
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.highlights.highlightDelay": 50,
    "todo-tree.highlights.defaultHighlight": {
        "icon": "check-circle",
        "type": "whole-line",
        "foreground": "#c9c9c9",
        "background": "#c6d100",
        "opacity": 50,
        "iconColour": "#c6d100",
        "rulerColour": "#FFFF00",
    },
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "TEST!"
    ],
    // * rainbow indent color setting
    "indentRainbow.errorColor": "#FF4C6D50",
    "indentRainbow.colors": [
        "#29677740",
        "#5acbff25",
        "#528f9e30",
    ],
    "C_Cpp.default.includePath": [
        "${default}",
        "/usr/include/mpi"
    ],
    // c/cpp code format
    "C_Cpp.clang_format_path": "clang-format-4.0",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // clang-format setting
    "clang-format.executable": "clang-format",
    "clang-format.assumeFilename": "/home/freshliver/Dropbox/Programming/.clang-format",
    "C_Cpp.clang_format_fallbackStyle": "file",
    "clang-format.language.c.fallbackStyle": "LLVM",
    "clang-format.language.cpp.fallbackStyle": "LLVM",
    "clang-format.fallbackStyle": "Google",
    // 
    // 
    // 
    //
    // 
    /******************************************************************************
    * 
    * ! Python
    * 
    *******************************************************************************/
    "python.formatting.provider": "autopep8",
    "python.analysis.cacheFolderPath": "/tmp",
    // 
    // 
    // 
    //
    // 
    /******************************************************************************
    *
    * ! JAVA
    * 
    *******************************************************************************/
    // 
    // 
    // 
    //
    // 
    /******************************************************************************
    *
    * ! Other Language
    * 
    *******************************************************************************/
    "[verilog]": {
        "editor.defaultFormatter": "ericsonj.verilogformat"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "terminal.integrated.tabs.location": "left",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "cSpell.userWords": [
        "Cloudant",
        "hsi",
        "jsonify",
        "markdownify",
        "textbox",
        "youtube"
    ],
    "emmet.includeLanguages": {
        "liquid": "html"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "explorer.autoReveal": false,
    "[css]": {
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "window.zoomLevel": 1,
    // 
    // 
    // 
    //
    // fin
}