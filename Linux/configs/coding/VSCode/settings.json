    // 
    // 
    // ! Extension Configs
    //
    //
    "extensions.autoUpdate": false,
    "pasteImage.basePath": "${currentFileDir}/imgs",
    // 
    // * Git
    // 
    "git.autofetchPeriod": 1000,
    // 
    // * cSpell Check
    // 
    "cSpell.spellCheckDelayMs": 500,
    "cSpell.allowCompoundWords": true,
    "cSpell.enableFiletypes": [
        "shellscript"
    ],
    // 
    // * TODO Tree
    // 
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.highlights.highlightDelay": 100,
    "todo-tree.highlights.defaultHighlight": {
        "icon": "check",
        "type": "whole-line",
        "foreground": "#c9c9c9",
        "background": "#c6d100",
        "opacity": 50,
        "iconColour": "#c6d100",
        "rulerColour": "#FFFF00",
    },
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "TEST",
        "NOTE",
        "BUG"
    ],
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug",
            "type": "whole-line",
            "foreground": "#c9c9c9",
            "background": "#17d66a",
            "rulerColour": "#17d66a",
            "iconColour": "#17d66a"
        },
        "FIXME": {
            "icon": "flame",
            "type": "whole-line",
            "foreground": "#c9c9c9",
            "background": "#d6174d",
            "rulerColour": "#d6174d",
            "iconColour": "#d6174d"
        },
        "NOTE": {
            "icon": "bookmark",
            "type": "whole-line",
            "foreground": "#c9c9c9",
            "background": "#17c6d6",
            "rulerColour": "#17c6d6",
            "iconColour": "#17c6d6"
        },
        "TEST": {
            "icon": "beaker",
            "type": "whole-line",
            "foreground": "#c9c9c9",
            "background": "#17c6d6",
            "rulerColour": "#17c6d6",
            "iconColour": "#17c6d6"
        }
    },
    // 
    // 
    // * C/CPP
    // 
    // 
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++14",
    "C_Cpp.default.includePath": [
        "${default}"
    ],
    "C_Cpp.autoAddFileAssociations": false,
    // 
    // ** clang-format
    // 
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "clang-format.assumeFilename": ".clang-format",
    "clang-format.executable": "clang-format",
    "clang-format.language.c.style": "file",
    "clang-format.language.cpp.style": "file",
    // 
    // 
    // * Python
    //
    // 
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.analysis.cacheFolderPath": "/tmp",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "130",
        "--experimental",
    ],
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.venvPath": "~/venv/",
    // 
    // ** ipynb
    // 
    "notebook.lineNumbers": "on",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    // 
    // 
    // * LaTeX
    // 
    // 
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.view.pdf.viewer": "tab",
    // 
    // 
    // * Other Languages
    // 
    //
    "[verilog]": {
        "editor.defaultFormatter": "ericsonj.verilogformat"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "emmet.includeLanguages": {
        "liquid": "html"
    },
    "editor.renderWhitespace": "boundary",
    "python.interpreter.infoVisibility": "always",
    "python.defaultInterpreterPath": "~/.pyenv/versions/3.7.15/envs/tmp/lib/python3.7/site-packages/python",
    "notebook.output.textLineLimit": 1000,
    "redhat.telemetry.enabled": false,
    "gitblame.inlineMessageFormat": "${author.name}: ${commit.summary}",
    "gitblame.inlineMessageNoCommit": "",
    "gitblame.statusBarMessageFormat": "${author.name} (${time.ago}):  ${commit.summary}",
    "window.zoomLevel": 1,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.userWords": [
        "Unstash"
    ],
    // 
    // 
    // ! vvv New Configs vvv
    // 
